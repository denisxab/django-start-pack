{
  "compilerOptions": {
    "target": "es6",
    "outDir": "./dist/",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false, //!!!
    "jsx": "react"
  },
  "include": [
    "src/**/*",
  ]
}
